<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/md_keylines">


    <com.example.win_8.cardigram.Typewriter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey,What can we do for you?"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24dip"
        android:background="#00000000"
        android:autoText="false"
        android:id="@+id/type"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="@dimen/md_keylines"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/ic_event_black_24dp"
        android:tint="@color/white"

        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/selectone"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/chat"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="@dimen/md_keylines"
        app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
        android:tint="@color/white"
        android:layout_marginTop="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/fab"
        android:layout_alignEnd="@+id/selectone"
        android:layout_marginEnd="52dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/download"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="0dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_cloud_download_black_24dp"
        android:tint="@color/white"

        android:layout_alignTop="@+id/fab"
        android:layout_toEndOf="@+id/selectone"/>

    <ImageView android:src="@drawable/start"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:id="@+id/selectone"
               android:layout_gravity="center_horizontal"
               android:focusable="true"
               android:layout_above="@+id/download"
               android:layout_centerHorizontal="true"/>


</RelativeLayout>